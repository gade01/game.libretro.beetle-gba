<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-gba"
		name="GBA (beetle)"
		version="1.0.1"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="game.libretro.beetle-gba.so"
                   library_linux="game.libretro.beetle-gba.so"
                   library_osx="game.libretro.beetle-gba.dylib"
                   library_windx="game.libretro.beetle-gba.dll"
                   library_wingl="game.libretro.beetla-gba.dll">
		<platforms>GBA</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Beetla-gba v1.0.1</summary>
		<description>Source: https://github.com/libretro/beetle-gba-libretro</description>
		<platform>all</platform>
	</extension>
</addon>
