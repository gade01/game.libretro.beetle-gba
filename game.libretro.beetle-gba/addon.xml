<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-gba"
		name="GBA (Beetle GBA)"
		version="0.9.36"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.beetle-gba.so"
                   library_linux="game.libretro.beetle-gba.so"
                   library_osx="game.libretro.beetle-gba.dylib"
                   library_windx="game.libretro.beetle-gba.dll"
                   library_wingl="game.libretro.beetla-gba.dll">
		<platforms>GBA</platforms>
		<extensions>gba|agb|bin</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Beetle GBA v0.9.36</summary>
		<description>Beetle GBA is a fork of Mednafen's GBA core for the libretro project.

Supported files: .gba, .agb, .bin

License: GPLv2</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
